 <div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3 mt-3">
      <table>
        <tr>
          <th class="pb-4">
            <%= link_to admin_user_path(@user.id) do %>
              <%= image_tag @post.user.image, class: "rounded-circle", size: "200x200" %>
            <% end %>
          </th>
        </tr>
        <tr>
          <td class="text-center mt-5"><%= @user.last_name %> <%= @user.first_name %></td>
        </tr>
      </table>
    </div>
    <div class="col-3">
      <div class="name text-center">
        <%= @post.name %>
        <div class="mt-5">
          <%= @post.comments.count %>コメント数
        </div>
      </div>
    </div>
    <div class="col-4 mt-3">
      <%= image_tag @post.image, class: "card-img-top", size: "400x400" %>
    </div>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <div class="col-1"></div>
  <div class="col-10 border border-dark my-3">
    <%= @post.introduction.gsub(/\n/, "<br>").html_safe %>
    <%= render 'user/posts/star',post: @post %>
    住所：<%= link_to @post.address, maps_path(address: @post.address) %>(※押したら地図が表示されます)
  </div>
</div>
</div>
<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
    <%= link_to '削除', admin_post_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-danger btn-block" %>
    </div>
  </div>
</div>
