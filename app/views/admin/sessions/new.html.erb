<div class="container my-5">
  <div class="row ml-2 mr-2 text-center"> <!-- Added margin for small screens -->
    <h3 class="col-12">管理者ログイン</h3>
  </div>

  <div class="col-12 registrations">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field row justify-content-center mt-2">
        <label class="col-12 col-md-2">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: 'col-12 col-md-5'  %>
      </div>

      <div class="field row justify-content-center mt-2">
        <label class="col-12 col-md-2">パスワード</label>
        <%= f.password_field :password, autocomplete: "current-password", class: 'col-12 col-md-5' %>
      </div>

      <div class="field row justify-content-center mt-2">
        <% if devise_mapping.rememberable? %>
          <div class="col-12 col-md-7 offset-md-2"> <!-- Adjust column widths for small screens -->
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>

      <div class="actions text-center row mt-3"> <!-- Added margin for small screens -->
        <%= f.submit "ログイン", class: "btn btn-sm btn-primary px-5 mx-auto d-block" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
  </div>
</div>
