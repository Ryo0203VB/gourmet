<div class="container">
  <div class="row">
    <div class="col">
    <h2 class="text-center mb-5">会員一覧</h2>
     <div class="d-flex align-items-center">

      <table class="table text-center">
        <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>投稿数</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @user.each do |user| %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= link_to admin_user_path(user.id) do %>
              <%= user.last_name %> <%= user.first_name %>
              <% end %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td><%= user.posts.count %></td>
            <td class= "<%= user.is_deleted ? 'text-gray' : 'text-green' %>"><%= user.is_deleted ? '退会済み' : '有効' %>
           </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= paginate @user %>
    </div>
  </div>
 </div>
 </div>