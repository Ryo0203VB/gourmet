<div class="container m-3">
      <div id="star-rate<%= post.id %>">
        <script>
          $('#star-rate<%= post.id %>').empty();
          window.raty(document.querySelector('#star-rate<%= post.id %>'), {
            size: 36,
            starOff: '<%= asset_path('star-off.png') %>',
            starOn: '<%= asset_path('star-on.png') %>',
            half: false,
            readOnly: true,
            score: <%= post.star %>,
          });
        </script>
      </div>
    </div>