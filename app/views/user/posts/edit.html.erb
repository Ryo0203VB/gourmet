<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>投稿詳細</h1>
<%= form_with model: @post do |f| %>
      <div class="form-group row mt-5">
        <%= f.label :image, "画像", class: "col-4 col-form-label" %>
        <%= f.file_field :image, class: "btn" %>
      </div>
      <div class="form-group row">
        <%= f.label :name, "店名", class: "col-4 col-form-label" %>
        <%= f.text_field :name, class: "col-7 form-control", placeholder: "商品名" %>
      </div>
      <div class="form-group row">
        <%= f.label :introduction, "説明", class: "col-4 col-form-label" %>
        <%= f.text_area :introduction, class: "col-7 form-control", placeholder: "ここに説明文を記述します" %>
      </div>

      </div>
    <div class="form-group text-center">
        <%= f.submit "変更を保存", class: "btn btn-success px-4 py-2" %>
    </div>
  <% end %>