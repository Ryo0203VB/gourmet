<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3">投稿詳細</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <label class="form-label">店名</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">感想</label>
          <%= f.text_area :introduction, rows: 10, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">住所</label>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group row">
          <%= f.label :genre, "ジャンル", class: "col-4 col-form-label" %>
          <%= f.select :genre_id, @genres, {}, class: "form-select" %>
        </div>
        <div class="field row mt-2">
          <%= f.label :image, "投稿画像", class: "col-4 col-form-label" %>
          <%= f.file_field :image, class: "btn" %>
        </div>
        <div class="action row mt-3">
          <%= f.submit "変更を保存", class: "btn btn-success px-4 py-2" %>
      </div>
      <% end %>
    </div>
  </div>
</div>