<div class='container px-5 px-sm-0'>
   <% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class='row'>
    <div class='col-md-3'>
      <h2 class="mt-3">New book</h2>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |posts| %>
      <tr>
        <td><%= link_to(posts.user) do %>
          <%= image_tag posts.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to posts.title,book %></td>
        <td><%= posts.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
  </div>
</div>