<% if @posts.errors.any? %>
  <%= @posts.errors.count %>件のエラーが発生しました
  <ul>
    <% @posts.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>新規投稿</h1>
<%= form_with model: @posts do |f| %>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control-file post_image", accept: 'image/*' %>
  </div>
  <div>
    <%= f.label :nema %>
    <%= f.text_field :name, class: 'post_name' %>
  </div>
  <div>
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: 'post_introduction' %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_area :address, class: 'post_address' %>
  </div>
  <div class="form-group row">
    <%= f.label :genre, "ジャンル", class: "col-4 col-form-label" %>
    <%= f.select :genre_id, @genres,{},{class: "form-select"} %>
  </div>


  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>