<h1>新規投稿</h1>
<%= form_with model: Post.new do |f| %>
  <div class="form-group">
    <%= f.label :nema %>
    <%= f.text_field :name, class: 'form-control post_name' %>
  </div>
  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: 'form-control post_introduction' %>
  </div>
  <div class="form-group row">
        <%= f.label :genre, "ジャンル", class: "col-4 col-form-label" %>
        <%= f.select :genre_id, @genres,{},{class: "form-select"} %>
      </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>