<% if @posts.errors.any? %>
  <%= @posts.errors.count %>件のエラーが発生しました
  <ul>
    <% @posts.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3">新規投稿</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @posts do |f| %>
      <div class="form-group">
        <label class="form-label">店名</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">感想</label>
        <%=f.text_area :introduction, rows: 10, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">住所</label>
        <%=f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group row">
          <%= f.label :genre, "ジャンル", class: "col-4 col-form-label" %>
          <%= f.select :genre_id, @genres,{},{class: "form-select"} %>
      </div>
      <div class="field row mt-2">
        <%= f.label :image, "ユーザー画像", class: "col-4 col-form-label" %>
        <%= f.file_field :image, class: "btn" %>
      </div>
      <div class="form-group" id="star">
        <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
        <div id="star"></div>
      </div>
  <script>
   $('#star').empty();
    window.raty(document.querySelector('#star'), {
      size     : 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      scoreName: 'post[star]',
      half: false,
    })
  </script>
  <div class="form-group">
      <%= f.submit '投稿する', class: "btn btn-success" %>
      <% end %>
  </div>
    </div>
  </div>
</div>