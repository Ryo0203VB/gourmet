<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-3">新規投稿</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <label class="form-label">店名</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">感想</label>
          <%= f.text_area :introduction, rows: 10, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">住所</label>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group row">
          <%= f.label :genre, "ジャンル", class: "col-4 col-form-label" %>
          <%= f.select :genre_id, @genres, {}, class: "form-select" %>
        </div>
        <div class="field row mt-2">
          <%= f.label :image, "投稿画像", class: "col-4 col-form-label" %>
          <%= f.file_field :image, class: "btn" %>
        </div>
        <div class="form-group" id="star">
          <%= f.label :star, '評価 ', class: 'col-md-3 col-form-label' %>
          <div id="star"></div>
        </div>
        <%= render 'user/posts/star' %>
        <div class="form-group">
          <%= f.submit '投稿する', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>