<div class="text-center">
<%= render "devise/shared/error_messages", resource: resource %>
</div>
<div class="box1">
  <div class="box-inner">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
   <h1>新規登録</h1>
    <div class="box-name">
      <%= f.label :last_name, "名前（姓）" %>
      <%= f.text_field :last_name, autofocus: true %>

      <%= f.label :first_name, "名前（名）" %>
      <%= f.text_field :first_name, autofocus: true %>
    </div>

　　<div class="box-name">
      <%= f.label :last_name_kana, "名前（ｾｲ）" %>
      <%= f.text_field :last_name_kana, autofocus: true %>

      <%= f.label :first_name_kana, "名前（ﾒｲ）" %>
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>

    <div class="box-email">
      <%= f.label :email, "Eメール" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="box-phone_number">
      <%= f.label :phone_number, "電話番号" %>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "000000000" %>
    </div>

    <div class="box-password">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> )</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="box-password">
      <%= f.label :password_confirmation, "パスワード(確認)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="box-login">
      <%= f.submit "新規登録" %>
    </div>
    <% end %>

    <div class="box-newusr">
      <p><span>------------</span> 既に登録されていますか？ <span>------------</span></p>
      <%= link_to "ログイン", new_user_session_path %>
    </div>
  </div>
</div>