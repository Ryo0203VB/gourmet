<div class="container">
  <div class='row'>
    <table class="table border table-hover table-inverse">
      <% if @result == [] %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% elsif @user.present? || @posts.present? %>
    <h2 class="mt-3">検索結果 【<%= @search_word %>】</h2>
      <thead>
        <% if @user.present? %>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
        <% end %>
      </thead>
      <tbody>
        <% @user.each do |f| %>
        <tr>
          <td><%= image_tag f.get_image(200,200), class: "image" %></td>
          <td><%= link_to f.name, user_path(f.id) %></td>
        </tr>
        <% end %>
      </tbody>
      <thead>
        <% if @posts.present? %>
        <tr>
          <th>name</th>
        </tr>
        <% end %>
      </thead>
      <tbody>
        <% @posts.each do |f| %>
       <tr>
          <td><%= f.name %></td>
        </tr>
        <% end %>
      </tbody>
      <% else %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% end %>
    </table>
  </div>
  </div>