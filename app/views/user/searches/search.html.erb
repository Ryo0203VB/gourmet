    <table class="table border table-hover table-inverse">
      <% if @result == [] %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% elsif @user.present? || @posts.present? %>
    <h2 class="mt-3">検索結果 【<%= @search_word %>】</h2>
      <thead>
        <% if @user.present? %>
        <tr>
          <th></th>
          <th>名前</th>
          <th>投稿数</th>
        </tr>
        <% end %>
      </thead>
      <tbody>
        <% @user.each do |f| %>
        <tr>
          <td><%= image_tag f.image,size:"50x50", class:"rounded-circle" %></td>
          <td><%= link_to f.name, user_path(f.id) %></td>
          <td><%= f.posts.count %></td>
        </tr>
        <% end %>
      </tbody>
      <div>
        <% if @posts.present? %>
        <div class="card-list-container">
         <% @posts.each do |posts| %>

     <div class="card w-25 mx-auto mt-2  shadow-lg">
       <%= link_to post_path(posts.id),data: {"turbolinks"=>false} do %>
        <%= image_tag posts.image, class:"card-img-top",size:"50x350" %>
       <% end %>
       <div class="card-body">
        <div class="row">
         <div class="col-2">
           <%= link_to user_path(posts.user) do %>
            <%= image_tag posts.user.image, class:"mt-3 rounded-circle", size:"50x50"; %>
           <% end %>
         </div>
         <div class="col-10">
          <p class="card-title">
           <%= link_to(post_path(posts.id), class:"text-dark") do %>
            <strong><i class="far fa-flag"></i><span> <%= posts.name %></span></strong>
           <% end %>
          </p>
          <div id="star-rate<%= posts.id%>">
          <script>
            $('#star-rate<%= posts.id %>').empty();
            window.raty(document.querySelector('#star-rate<%= posts.id%>'), {
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              half      : false,
              readOnly: true,
              score: <%= posts.star %>,
            });
          </script>
          </div>
          <span class="pt-1"><%= posts.user.name %> | </span>
          <span><%= link_to "#{posts.comments.count} コメント", post_path(posts.id), class:"text-dark" %></span>
          <span><%= render "user/favorites/btn", post: posts %></span>
         </div>
        </div>
      </div>
    </div>
    <% end %>
    </div>
        <% end %>
      </div>
      <% else %>
        <h3 class="mt-3 text-center">検索結果がありません。</h3>
      <% end %>
    </table>
