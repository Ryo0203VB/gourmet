<div class="container">
  <div class="row">
    <div class="col-4 mt-3">
    <table>
     <tr>
       <th class=pb-4><%= image_tag @user.get_image(250,250), class: "rounded-circle" %></th>
     </tr>
     <tr>
       <td class="text-center mt-5" ><%= @user.last_name %> <%= @user.first_name %></td>
     </tr>
    </table>
      </div>
      <thead>
        <div class="col-6 ml-2 mt-5">
         <table class="table text-center">
          <thead>
            <tr>
              <th>投稿</th>
              <th>フォロワー</th>
              <th>フォロー中</th>
           <tr>
          </thead>
          <tbody class=text-center>
            <tr>
              <td><%= @user.posts.count %></td>
              <td><%= link_to @user.followings.count, user_followings_path(@user) %></td>
              <td><%= link_to @user.followers.count, user_followers_path(@user) %></td>
           </tr>
          </tbody>
        </table>
         <div class="text-center mb-4 pt-3">
            <%= @user.introduction %>
         </div>
         <% unless @user.guest_user? %>
           <% if @user.id == current_user.id%>
            <div class="text-center pt-5">
             <%= link_to "編集する", edit_user_path, class: "btn btn-outline-secondary btn-block" %>
            </div>
          <% else %>
            <%= render "user/relationships/btn", user: @user, options: { class: "btn btn-outline-secondary btn-block"} %>
          <% end %>
        <% end %>
         </div>
        </div>
       </div>

   <div class="card-list-container">
    <% @posts.each do |posts| %>
     <div class="card w-25 mx-auto mt-2 shadow-lg">
       <%= link_to post_path(posts.id),data: {"turbolinks"=>false} do %>
        <%= image_tag posts.image, class:"card-img-top",size:"50x350" %>
       <% end %>
       <div class="card-body">
        <div class="row">
         <div class="col-2">
           <%= link_to user_path(current_user) do %>
            <%= image_tag posts.user.image, class:"mt-3 rounded-circle", size:"50x50"; %>
           <% end %>
         </div>
         <div class="col-10">
          <p class="card-title">
           <%= link_to(post_path(posts.id), class:"text-dark") do %>
            <strong><i class="far fa-flag"></i><span> <%= posts.name %></span></strong>
           <% end %>
          </p>
          <div id="star-rate<%= posts.id%>">
          <script>
            $('#star-rate<%= posts.id %>').empty();
            window.raty(document.querySelector('#star-rate<%= posts.id%>'), {
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              half      : false,
              readOnly: true,
              score: <%= posts.star %>,
            });
          </script>
          </div>
          <span class="pt-1"><i class="fas fa-user"></i> By <%= posts.user.name %> ｜ </span>
          <span><%= link_to "#{posts.comments.count} コメント", post_path(posts.id), class:"text-dark" %></span>
          <span><%= render "user/favorites/btn", post: posts %></span>
         </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @posts %>
  </div>


           

